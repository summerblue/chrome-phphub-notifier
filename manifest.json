{
  "name": "PHPHub Notifier",
  "description": "Notify you when interesting thing is happening at PHPHub.",
  "default_locale": "en",
  "version": "0.1",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions" : [
    "*://phphub.org/*",
    "tabs",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["https://phphub.org/*"],
      "css": ["style.css"],
      "js": ["config.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
